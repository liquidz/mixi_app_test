<?xml version="1.0" encoding="UTF-8"?>

<Module>
	<ModulePrefs title="uniform">
		<Require feature="opensocial-0.8" />
		<Require feature="dynamic-height" />
	</ModulePrefs>

	<!-- =canvas {{{ -->
	<Content type="html" view="canvas">
		<![CDATA[
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/com/js/jquery-1.4.2.min.js"></script>
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/com/js/kuma.js"></script>
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/com/js/myopensocial.js"></script>
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/js/DD_belatedPNG_0.0.8a-min.js"></script>
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/js/jquery-ui-1.8.4.custom.min.js"></script>
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/jSlider/js/jquery.dependClass.js"></script>
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/jSlider/js/jquery.slider-min.js"></script>
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/colorpicker/js/colorpicker.js"></script>
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/js/common.js"></script>

		<link rel="stylesheet" type="text/css" href="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/colorpicker/css/colorpicker.css" />
		<link rel="stylesheet" type="text/css" href="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/jSlider/css/jslider.css" />
		<link rel="stylesheet" type="text/css" href="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/css/tshirt.css" />
		<link rel="stylesheet" type="text/css" href="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/css/edit.css" />

		<div id="main">
			<div id="tshirt" class="iepngfix">
				<p class="tshirt_name"></p>
				<p class="tshirt_number"></p>
			</div>
			<p>※ドラッグ＆ドロップで移動できます</p>

			<div id="hoge" class="tshirt_small">
				<p class="tshirt_name"></p>
				<p class="tshirt_number"></p>
			</div>
		</div>

		<div id="change_form">
			<fieldset>
				<legend>設定の変更</legend>
				<p>種類:
					<select id="new_tshirt_image">
						<option value="tshirt.png">ユニフォーム</option>
						<option value="baby.png">赤ちゃん</option>
						<option value="penguin.png">ペンギン</option>
						<option value="cat.png">猫</option>
					</select>
					色: <input type="text" id="new_tshirt_color" class="color" />
				</p>
				<p>名前:
					<input type="text" id="new_tshirt_name" class="text" />
					文字色: <input type="text" id="new_tshirt_name_color" class="color" />
					位置: <input type="text" id="new_tshirt_name_top" class="pos" /> ,
					<input type="text" id="new_tshirt_name_left" class="pos" />
				</p>
				<p class="slider_parent"><input type="slider" id="new_tshirt_name_size" class="slider" value="0" /></p>
				<p>番号:
					<input type="text" id="new_tshirt_number" class="text" />
					文字色: <input type="text" id="new_tshirt_number_color" class="color" />
					位置: <input type="text" id="new_tshirt_number_top" class="pos" /> ,
					<input type="text" id="new_tshirt_number_left" class="pos" />
				</p>
				<p class="slider_parent"><input type="slider" id="new_tshirt_number_size" class="slider" value="0" /></p>
	
				<p class="buttons">
					<button id="reset_setting">リセット</button>
					-
					<button id="save_setting">保存</button>
				</p>
			</fieldset>
	
			<button id="invite">マイミクを招待</button>
			<button id="activity">背番号の変更を通知</button>
		</div>
		]]>
	</Content>
	<!-- }}} -->

	<Content type="html" view="profile">
		<![CDATA[
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/com/js/jquery-1.4.2.min.js"></script>
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/com/js/kuma.js"></script>
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/com/js/myopensocial.js"></script>
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/js/DD_belatedPNG_0.0.8a-min.js"></script>
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/js/common.js"></script>
		<link rel="stylesheet" type="text/css" href="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/css/tshirt.css" />

		<div id="tshirt" class="iepngfix">
			<p class="tshirt_name"></p>
			<p class="tshirt_number"></p>
		</div>
		]]>
	</Content>

	<Content type="html" view="home">
		<![CDATA[
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/com/js/jquery-1.4.2.min.js"></script>
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/com/js/kuma.js"></script>
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/com/js/myopensocial.js"></script>
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/js/DD_belatedPNG_0.0.8a-min.js"></script>
		<!--
		<script type="text/javascript" src="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/js/common.js"></script>
		-->

		<link rel="stylesheet" type="text/css" href="http://github.com/liquidz/mixi_app_test/raw/develop/tshirt/css/tshirt.css" />

		<div id="tshirt_list"></div>
		]]>
	</Content>
</Module>


